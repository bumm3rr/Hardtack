<?xml version="1.0" encoding="UTF-8"?>

<Defs>
    <RecipeDef Name="Make_HardtackBase" Class="UniversalFermenterSK.RecipeDef_UF" Abstract="True">
        <fixedIngredientFilter>
            <thingDefs>
                <li>Flour</li>
            </thingDefs>
        </fixedIngredientFilter>
        <recipeUsers>
            <li>BreadOven</li>
        </recipeUsers>
        <temperatureSafe>
            <min>-275</min>
            <max>1000</max>
        </temperatureSafe>
        <temperatureIdeal>
            <min>-275</min>
            <max>1000</max>
        </temperatureIdeal>
        <processDays>0.25</processDays>
        <speedBelowSafe>0</speedBelowSafe>
        <speedAboveSafe>0</speedAboveSafe>
    </RecipeDef>

    <RecipeDef ParentName="Make_HardtackBase" Class="UniversalFermenterSK.RecipeDef_UF">
        <defName>Make_Hardtack</defName>
        <label>Make Hardtack</label>
        <description>Bake some hardtack</description>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Flour</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Salt</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <products>
            <Hardtack>10</Hardtack>
        </products>
    </RecipeDef>

